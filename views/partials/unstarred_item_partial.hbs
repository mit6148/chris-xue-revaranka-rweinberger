  <div class="product" data-toggle="modal" data-target="#{{itemname}}">
<!--     <div class="pictureinbox">
      <img id='forsale' src="/uploads/{{picture}}" />
    </div> -->
       <div class="col-s-6 " style="background-image:url('/uploads/{{picture}}');height:210px;width:249.5px; background-size: cover; background-position: center; "></div> 
    <div class='contentinbox'>
      <p align="left" id="productcontent" >{{itemname}}</p>
      <p align="right" id="productcontent3">${{price}}</p>
      <p align="left" id="productcontent2">{{user}}</p>


    </div>
    
  </div>
  <!-- Modal -->
  <div class="modal fade" id="{{itemname}}" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <div class='blankstar' id='blankstar{{id}}'>&#9734;</div>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">{{itemname}}</h4>
          <h5 class='modal-price'>${{price}}</h5>
          <!-- &#36;&#32;  -->
        </div>

        <div class="modal-body">
          <div class='imageresize'>
            <img class= 'model-image' src="/uploads/{{picture}}" />
          </div>
          <h6 class="modal-description">{{description}}</h6>
          <div class='post-modal'
            >Posted by: <a href='/profile/{{userid}}'> {{firstname}} {{lastname}} </a><br><a href= 'mailto:{{user}}'> ({{user}})</a>
          </div>
        </div>
        <div style="display:none" class='id' id="{{id}}"></div>

      </div>
      
    </div>
  </div>
