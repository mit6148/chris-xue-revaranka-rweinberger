<input type = 'hidden' value = {{id}} name = itemid>
<input class="inputbox" id="additemprice" type="text" maxlength="15" placeholder="Price" name="price" >
<textarea class="inputbox" id='description' rows="6" placeholder='Please write a description of your item here.' name='description' cols="50" ></textarea>
<select id='category' class = id='category' name = 'category'>
              <option value="clothes">Clothes</option>
              <option value="book">Books</option>
              <option value="tech">Tech</option>
              <option value="furniture">Furniture</option>
</select>

